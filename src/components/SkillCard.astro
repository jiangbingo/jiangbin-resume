---
// src/components/SkillCard.astro
interface Props {
  icon: string;
  title: string;
  skills: string[];
}

const { icon, title, skills } = Astro.props;
---

<div class="bg-white dark:bg-slate-700 rounded-xl p-6 shadow-sm hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
  <div class="text-4xl mb-4">{icon}</div>
  <h3 class="text-lg font-semibold mb-3">{title}</h3>
  <div class="flex flex-wrap gap-2">
    {skills.map((skill) => (
      <span class="px-2 py-1 bg-slate-100 dark:bg-slate-600 text-slate-600 dark:text-slate-300 text-sm rounded">
        {skill}
      </span>
    ))}
  </div>
</div>
