---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Base title={`${post.data.title} - 江斌`}>
  <article class="py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto">
        <header class="mb-12">
          <a href="/blog" class="text-blue-600 dark:text-blue-400 hover:underline mb-4 inline-block">
            ← 返回博客列表
          </a>
          <h1 class="text-4xl font-bold mb-4">{post.data.title}</h1>
          <div class="text-slate-500 dark:text-slate-400 mb-4">
            {post.data.date.toLocaleDateString('zh-CN')}
          </div>
          <div class="flex gap-2">
            {post.data.tags.map((tag) => (
              <span class="px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300 text-sm rounded">
                {tag}
              </span>
            ))}
          </div>
        </header>

        <div class="prose dark:prose-invert max-w-none" data-pagefind-body>
          <Content />
        </div>
      </div>
    </div>
  </article>
</Base>
