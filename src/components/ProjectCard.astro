---
// src/components/ProjectCard.astro
interface Props {
  title: string;
  description: string;
  tech: string[];
  metrics: { label: string; value: string }[];
  link?: string;
}

const { title, description, tech, metrics, link } = Astro.props;
---

<div class="bg-white dark:bg-slate-800 rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-slate-600 dark:text-slate-400 mb-4">{description}</p>

    <!-- 技术标签 -->
    <div class="flex flex-wrap gap-2 mb-4">
      {tech.map((t) => (
        <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300 text-sm rounded">
          {t}
        </span>
      ))}
    </div>

    <!-- 指标 -->
    <div class="grid grid-cols-2 gap-4 text-center border-t border-slate-200 dark:border-slate-700 pt-4">
      {metrics.map((m) => (
        <div>
          <div class="text-2xl font-bold text-blue-600 dark:text-blue-400">{m.value}</div>
          <div class="text-sm text-slate-500 dark:text-slate-400">{m.label}</div>
        </div>
      ))}
    </div>

    {link && (
      <a href={link} class="inline-block mt-4 text-blue-600 dark:text-blue-400 hover:underline">
        查看详情 →
      </a>
    )}
  </div>
</div>
